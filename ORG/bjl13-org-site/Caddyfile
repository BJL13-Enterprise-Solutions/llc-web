bjl13.org {
    root * /org/public
    file_server
    encode zstd gzip

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src * data:; script-src 'none';"
    }

    handle_errors {
        respond "Sorry, something went wrong." 500
    }
}
